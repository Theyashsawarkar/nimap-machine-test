<!-- /src/views/productsByCategory.ejs -->

<h1 class="text-4xl font-bold text-center my-8">Products in <%= category_name %></h1>

<div class="container mx-auto">
  <% if (products.length === 0) { %>
    <p>No products found for this category.</p>
  <% } else { %>
    <table class="min-w-full table-auto border-collapse">
      <thead>
        <tr>
          <th class="border-b p-2">Product ID</th>
          <th class="border-b p-2">Product Name</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(product => { %>
          <tr>
            <td class="border-b p-2"><%= product.ProductId %></td>
            <td class="border-b p-2"><%= product.ProductName %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
</div>
