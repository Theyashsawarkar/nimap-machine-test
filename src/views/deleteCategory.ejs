<!-- /src/views/deleteCategory.ejs -->

<h1 class="text-4xl font-bold text-center my-8">Delete Category</h1>

<div class="container mx-auto">
  <p>Are you sure you want to delete the category "<%= category.category_name %>"?</p>

  <form action="/categories/delete/<%= category.category_id %>" method="POST" class="mt-4">
    <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600">Yes, Delete</button>
    <a href="/categories" class="bg-gray-500 text-white px-4 py-2 rounded-md hover:bg-gray-600 ml-4">Cancel</a>
  </form>
</div>

