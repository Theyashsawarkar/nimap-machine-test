
<h1 class="text-4xl font-bold text-center my-8">All Products</h1>

<div class="container mx-auto">
  <table class="min-w-full table-auto border-collapse">
    <thead>
      <tr>
        <th class="border-b p-2">Product ID</th>
        <th class="border-b p-2">Product Name</th>
        <th class="border-b p-2">Category Name</th>
      </tr>
    </thead>
    <tbody>
      <% products.forEach(product => { %>
        <tr>
          <td class="border-b p-2"><%= product.ProductId %></td>
          <td class="border-b p-2"><%= product.ProductName %></td>
          <td class="border-b p-2"><%= product.CategoryName %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <div class="mt-4">
    <% if (page > 1) { %>
      <a href="/api/products/?page=<%= page - 1 %>&pageSize=<%= pageSize %>" class="px-4 py-2 bg-gray-300 rounded hover:bg-gray-400">Previous</a>
    <% } %>
    <a href="/api/products/?page=<%= page + 1 %>&pageSize=<%= pageSize %>" class="px-4 py-2 bg-gray-300 rounded hover:bg-gray-400">Next</a>
  </div>
</div>
